<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rocks_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.willie_the_coyote.beep_beep.choose_level">

    <LinearLayout
        android:id="@+id/ll_title_choose_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_attempt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_level_title"
            android:textColor="#505b0e"
            android:textAlignment="center"
            android:textSize="@dimen/choose_level_title_text_size" />
    </LinearLayout>

    <fragment android:name="com.example.willie_the_coyote.beep_beep.Fragments.ChooseLevel2x2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_level_grid_container"
        android:layout_below="@id/ll_title_choose_level"
        tools:layout="@layout/activity_level_difficulty"/>
</RelativeLayout>
