<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rocks_backgroundwithkolche"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.willie_the_coyote.beep_beep.LevelDifficulty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageButton
            style="@style/ArrowButtons"
            android:onClick="loadChooseLevel2x2"
            android:src="@drawable/tabela1" />

        <ImageButton
            style="@style/ArrowButtons"
            android:onClick="loadChooseLevel3x3"
            android:src="@drawable/tabela2" />

        <ImageButton
            style="@style/ArrowButtons"
            android:onClick="loadChooseLevel4x4"
            android:src="@drawable/tablela3" />

        <ImageButton
            style="@style/ArrowButtons"
            android:onClick="loadChooseLevel5x5"
            android:src="@drawable/tabela4" />

        <ImageButton
            style="@style/ArrowButtons"
            android:onClick="loadChooseLevel"
            android:src="@drawable/tabela5" />
    </LinearLayout>
</RelativeLayout>
