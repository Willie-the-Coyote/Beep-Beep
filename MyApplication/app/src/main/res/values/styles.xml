<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="StartButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">@dimen/start_button_padding</item>
        <item name="android:layout_marginBottom">@dimen/start_button_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/start_button_margin_left</item>
        <item name="android:width">@dimen/start_button_width</item>
        <item name="android:text">@string/start_button_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/startBtnTextColor</item>
        <item name="android:background">@drawable/samplebutton</item>
    </style>
    <style name="LevelButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@null</item>
        <item name="android:maxHeight">@dimen/level_image_max_height</item>
        <item name="android:maxWidth">@dimen/level_image_max_width</item>
    </style>
    <style name="LevelsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ArrowButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxWidth">@dimen/arrow_button_max_width</item>
        <item name="android:maxHeight">@dimen/arrow_button_max_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>
</resources>


